<% provide(:title, 'Sign up') %>

<h1>Sign up</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for(@user) do |u| %>
		<%= render 'shared/error_messages' %>

		<%= u.label :name %>
		<%= u.text_field :name, class: 'form-control' %>

		<%= u.label :email %>
		<%= u.email_field :email, class: 'form-control' %>

		<%= u.label :password %>
		<%= u.password_field :password, class: 'form-control' %>

		<%= u.label :password_confirmation, "Confirmation" %>
		<%= u.password_field :password_confirmation, class: 'form-control' %>

		<%= u.submit "Create my Account", class:"btn btn-primary" %>
		<% end %>
	</div>
</div>
